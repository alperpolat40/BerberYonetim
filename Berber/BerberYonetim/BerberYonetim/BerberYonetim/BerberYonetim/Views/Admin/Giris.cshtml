@{
    ViewData["Title"] = "Admin Girişi";
}

<h2>Admin Girişi</h2>

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}

<form asp-action="Giris" method="post">
    <div class="form-group">
        <label for="email">E-posta</label>
        <input type="email" name="email" class="form-control" placeholder="E-posta adresinizi girin" required />
    </div>
    <div class="form-group mt-3">
        <label for="sifre">Şifre</label>
        <input type="password" name="sifre" class="form-control" placeholder="Şifrenizi girin" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Giriş Yap</button>
</form>
